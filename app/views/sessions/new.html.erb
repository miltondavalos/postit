<%= render 'shared/content_title', title: 'Log In' %>
<div class='well'>
  <%= form_tag '/login' do %>
      <div class='group-control'>
        <%= label_tag 'Name' %>
        <%= text_field_tag :username, params[:username] || '' %>
        <%= label_tag 'Password' %>
        <%= password_field_tag :password, params[:password] || ''%>
      </div>
      <%= submit_tag 'Log In', class: 'btn btn-primary' %>
  <% end %>
</div>